<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="Main">

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="D-DAY Counter"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg" />
        <TextView
            android:id="@+id/birthCount_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="BirthCount: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/birthCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignBaseline="@id/birthCount_tx"
            android:layout_toRightOf="@id/birthCount_tx"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/finalDate"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:background="@drawable/radius"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작일"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/calendarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="양력 달력"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/endBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="종료일"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:text="초기화"
            android:layout_alignTop="@id/birthCount_tx"/>


    </RelativeLayout>
</layout>